<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    
    <title><%= h(current_page.data.title) || 'Playbook' %></title>
    
    <%= stylesheet_link_tag 'playbook-style' %>
    
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    
    <%= javascript_include_tag "offcanvas-sidebar" %>
    <%= javascript_include_tag "scroll-to-top" %>
  </head>
  <body>
    <%= partial "middleman/partials/header" %>
    
    <%= partial "middleman/partials/sidebar" %>

    <div class="overlay"></div>

    <div class="canvas">
      <div class="main-container">
        <div class="container">
          <%= yield %>

          <%= partial 'middleman/layouts/playbook/section' %>
        </div>
      </div>
      
      <%= partial "middleman/partials/footer" %>
    </div>
    <a href="#" class="js-button-top"></a>
  </body>
</html>
